<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.uu.csproject.monadclient.MainActivity"
    android:weightSum="1">

    <include
        android:id="@+id/actionToolBar"
        layout="@layout/app_bar" />


    <!-- <LinearLayout
         android:id="@+id/Trip_details_Confirmation"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:layout_marginBottom="1dp"
         android:orientation="horizontal"
         android:layout_marginTop="1dp"
         android:background="#ffffff"
        />
 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/actionToolBar"
        android:layout_alignParentBottom="true">

        <!-- <TextView
        android:id="@+id/my_notifications"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Welcome, User!"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:layout_marginLeft="50dp"
        />
        -->

        <!--
    <ImageView
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:background="@color/primaryColor"
        android:src="@drawable/ic_tag_faces_white_18dp"
        android:layout_toRightOf="@+id/Trip_details_Confirmation"
        />
-->
        <LinearLayout
            android:id="@+id/layout_of_trip_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:focusable="true"
            android:layout_marginBottom="15dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/label_search_with_recommendation_where"
                android:textColor="#ffffff"
                android:textStyle="italic"
                android:background="@color/black"
                android:onClick="openMainSearch"
                android:paddingLeft="8dp"
                android:paddingRight="2dp"
                android:paddingEnd="2dp"
                android:id="@+id/editText" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/primaryColor"
                android:src="@drawable/ic_location_on_white_48dp"
                android:layout_toRightOf="@+id/edit_text_trip_confirmation"
                android:onClick="openMainSearch" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999"
            android:layout_below="@+id/layout_of_trip_text"></View>

        <RelativeLayout
            android:id="@+id/confirmation_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_of_trip_text"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/primaryColor"
            android:gravity="center_horizontal">
            <!--your booking was successful-->
            <TextView
                android:id="@+id/Your_booking_was_successful_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Your booking was successful"
                android:textColor="#ffffff"
                android:textStyle="italic"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal" />
            <!--firstline-->
            <LinearLayout
                android:id="@+id/layout_first_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/Your_booking_was_successful_text_view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/trip_depart_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Depart:"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:gravity="right"

                    />

                <TextView
                    android:id="@+id/trip_depart_stop_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Polacksbacken"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/trip_depart_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="13:10"
                    android:textSize="18sp"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_second_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/layout_first_line"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/trip_arrive_text_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Arrive: "
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:gravity="right" />

                <TextView
                    android:id="@+id/trip_arrive_stop_name_text_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Ultuna"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:layout_weight="2"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/trip_arrive_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/label_routesuccess_arrivaltime"
                    android:textSize="18sp"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_third_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/layout_second_line"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/walking_sign_image_view"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_directions_walk_black_24dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/trip_more_information_text_view"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="3"
                    android:text="Walk to Polacksbacken"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:gravity="start"
                    android:onClick="linkToTripDetails"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_fourth_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_third_line"
                android:orientation="horizontal"

                >

                <ImageView
                    android:id="@+id/bus_sign_image_view"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_directions_bus_black_24dp"
                    android:layout_weight="1"
                    android:paddingBottom="3dp" />

                <TextView
                    android:id="@+id/trip_bus_number_text_view"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="3"
                    android:text="Bus 801"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:gravity="start"
                    android:paddingBottom="3dp" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/confirmation_relativelayout"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/count_down_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Countdown to Departure"
                android:textSize="18sp"
                android:textColor="#ff0000"
                android:gravity="center_horizontal"
                android:paddingTop="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="00:30:05"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:textColor="#ff0000" />


        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>