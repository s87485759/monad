<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="se.uu.csproject.monadclient.LoginActivity">

    <include
        android:id="@+id/actionToolBar"
        layout="@layout/app_bar" />

    <LinearLayout
        android:id="@+id/linearlayout_of_search_text"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/actionToolBar"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:focusable="true">

        <!--<EditText-->
        <!--android:id="@+id/edit_text_trip_confirmation"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1"-->
        <!--android:hint="where do you want to go"-->
        <!--android:textColorHint="#ffffff"-->
        <!--android:textColor="#ffffff"-->
        <!--android:textSize="12sp"-->
        <!--android:background="#000000"-->
        <!--android:focusable="false"-->
        <!--android:onClick="openMainSearch"-->
        <!--android:clickable="true"-->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/label_search_with_recommendation_where"
            android:textColor="#ffffff"
            android:textStyle="italic"
            android:background="@color/black"
            android:paddingLeft="8dp"
            android:paddingRight="2dp"
            android:paddingEnd="2dp" />

        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/primaryColor"
            android:src="@drawable/ic_location_on_white_48dp"
            android:layout_toRightOf="@+id/edit_text_trip_confirmation"
            android:onClick="openMainSearch" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/label_main_recommendations"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/primaryColor"
        android:layout_marginLeft="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primaryColor"
        android:layout_below="@+id/layout_of_trip_text"
        android:layout_marginBottom="2dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/search_main_search_button"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/gray">

                    <TextView
                        android:id="@+id/search_main_result_time_1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="18:30 - 19:00 (30min)"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:id="@+id/search_main_result_stop_1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:text="Uppsala Centrastation to Flogstavägen"
                        android:gravity="center"
                        android:layout_marginLeft="5dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/search_main_result_time_1"
                        android:src="@drawable/ic_directions_run_black_18dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="8dp"
                        android:background="@color/primaryColor" />

                    <ImageButton
                        android:layout_width="68dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_forward_white_24dp"
                        android:background="@color/primaryColor"
                        android:layout_alignParentRight="true"
                        android:onClick="openTripDetail" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/gray">

                    <TextView
                        android:id="@+id/search_main_result_time_2"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="13:10 - 13:55 (45min)"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:id="@+id/search_main_result_stop_2"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:text="Polacksbacken to Ultuna"
                        android:gravity="center"
                        android:layout_marginLeft="5dp" />

                    <ImageButton
                        android:layout_width="68dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_forward_white_24dp"
                        android:background="@color/primaryColor"
                        android:layout_alignParentRight="true"
                        android:onClick="openTripDetail" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/gray">

                    <TextView
                        android:id="@+id/search_main_result_time_3"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="09:20 - 10:10 (50min)"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:id="@+id/search_main_result_stop_3"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:text="Gottsunda to Övre Slottsgatan"
                        android:gravity="center"
                        android:layout_marginLeft="5dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/search_main_result_time_3"
                        android:src="@drawable/ic_directions_bus_black_18dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/primaryColor" />

                    <ImageButton
                        android:layout_width="68dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_forward_white_24dp"
                        android:background="@color/primaryColor"
                        android:layout_alignParentRight="true"
                        android:onClick="openTripDetail" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/gray">

                    <TextView
                        android:id="@+id/search_main_result_time_4"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="08:00 - 08:30 (30min)"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:id="@+id/search_main_result_stop_4"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:text="Flogstavägen to Uppsala Centralstation"
                        android:gravity="center"
                        android:layout_marginLeft="5dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/search_main_result_time_4"
                        android:src="@drawable/ic_directions_run_black_18dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/primaryColor" />

                    <ImageButton
                        android:layout_width="68dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_forward_white_24dp"
                        android:background="@color/primaryColor"
                        android:layout_alignParentRight="true"
                        android:onClick="openTripDetail" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
