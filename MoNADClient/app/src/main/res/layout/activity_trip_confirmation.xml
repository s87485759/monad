<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.uu.csproject.monadclient.MainActivity"
    android:weightSum="1">

    <include
        android:id="@+id/actionToolBar"
        layout="@layout/app_bar" />
    <LinearLayout
        android:id="@+id/Trip_details_Confirmation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
       />


    <TextView
        android:id="@+id/my_notifications"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Welcome, User!"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:layout_marginLeft="50dp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:background="@color/primaryColor"
        android:src="@drawable/ic_tag_faces_white_18dp"
        android:layout_toRightOf="@+id/Trip_details_Confirmation"
        />

    <RelativeLayout
        android:id="@+id/layout_of_trip_text"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/actionToolBar"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:focusable="true"
        >

        <EditText
            android:id="@+id/edit_text_trip_confirmation"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="where do you want to go"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:background="#000000"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/primaryColor"
            android:src="@drawable/ic_location_on_white_18dp"
            android:layout_toRightOf="@+id/edit_text_trip_confirmation"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF0000FF"
        android:layout_below="@+id/layout_of_trip_text">
    </View>

    <RelativeLayout
        android:id="@+id/confirmation_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_of_trip_text"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/primaryColor"
        android:gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/Your_booking_was_successful_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your booking was successful"
            android:textColor="#ffffff"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            />

        <LinearLayout
            android:id="@+id/linearlayout_first_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/Your_booking_was_successful_text_view"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/trip_depart_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Depart"
                android:textColor="#ffffff"
                 />

             <TextView
                 android:id="@+id/trip_depart_stop_name"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="2"
                 android:text="India"
                 android:textColor="#ffffff"
                 android:gravity="center_horizontal"
                 />

             <TextView
                 android:id="@+id/trip_depart_time"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:text="12:12"
                 android:textColor="#ffffff"
            />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_second_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/linearlayout_first_line"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/trip_arrive_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Arrive"
                android:textColor="#ffffff"
                android:layout_weight="1"
            />

            <TextView
                android:id="@+id/trip_arrive_stop_name_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Iran"
                android:textColor="#ffffff"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/trip_arrive_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="12:12"
                android:textColor="#ffffff"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_third_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_below="@+id/linearlayout_second_line"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/bus_sign_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_directions_bus_black_24dp"
                />

            <TextView
                android:id="@+id/trip_bus_number_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BusNumber_2"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:paddingTop="18dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_fourth_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout_third_line"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/walking_sign_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_directions_walk_black_24dp"
                />

            <TextView
                android:id="@+id/trip_more_information_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="route details"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:onClick="linkToTripDetails"
                android:paddingTop="3dp"
                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/confirmation_relativelayout"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/count_down_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="count down to departure"
            android:textColor="#ff0000"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="12:30:00PM"
            android:gravity="center_horizontal"
            android:textColor="#ff0000"
            />



    </LinearLayout>

</RelativeLayout>
