                android:layout_height="24dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp"
                android:layout_gravity="end"
                android:background="#ffffff"
                android:src="@drawable/ic_clear_red_24dp"
                android:contentDescription="@string/label_trips_cancel_content_description"
                android:onClick="cancelTrip1" />

            <!--tripDetails icon-->
            <ImageButton
                android:id="@+id/button1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="77dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"
                android:background="?attr/colorPrimary"
                android:src="@drawable/ic_arrow_forward_white_24dp"
                android:contentDescription="@string/label_trips_button_content_description"
                android:onClick="viewTripDetails1" />

            <!--bus icon-->
            <ImageView
                android:id="@+id/bus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cropToPadding="false"
                android:src="@drawable/ic_directions_bus_black_24dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:contentDescription="@string/label_trips_bus_content_description" />

            <!--text: to from -->
            <TextView
                android:id="@+id/info_text_from1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="@string/label_trips_from"
                android:textSize="12sp"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/info_text_to1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="@string/label_trips_to"
